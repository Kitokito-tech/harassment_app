
{% extends 'layout.html.twig' %}
{% block stylesheet %}
		<link rel="stylesheet" href="{{ asset('bundles/app/css/default.css') }}">
		<link rel="stylesheet" href="{{ asset('bundles/app/slick/slick.css') }}">
		<link rel="stylesheet" href="{{ asset('bundles/app/slick/slick-theme.css') }}">
{% endblock %}
		
{% block content %}
		<div class="top">
			<div class="top-container">
				<div class="top-head">
					<h1 class="top-head__ttl">これって、ハラスメント<br>なのかな？</h1>
					<p class="top-head__txt">そう感じた方はまずは下のボタンからハラスメント度を診断してみてください。<br>
						また、HaraNaxに悩みを投稿してユーザー同士で意見を交換しましょう。</p>
				</div>
				<button class="to-dia">
					<a href="{{ path('diagnoze_cate') }}">診断する
					</a>
				</button>
			</div>
		<!-- /.container -->
		<div class="top-new">
			<div class="top-new__head">
				<h2 class="sub-ttl">最近の投稿</h2>
			</div>
			<ul class="top-new__list slide">
				{% for contribution in contributions %}
				{# <li class="top-new__list--item">
					<a href="{{ path("contrib_detail", {"id":contribution.id }) }}"  class="top-new__list--item-link">
						<p class="top-new__list--item-text">
							{{contribution.content}}
						</p>
					</a>
				</li> #}
				<li class="top-new__list--item">
					<a href="{{ path("contrib_detail", {"id":contribution.id }) }}" class="top-new__list--item-link">
						<div class="cb__cate">
        	            	<span class="cb__p">category</span>{{contribution.category.cateName}}
                		</div>
                		<div class="cb__txt top-new__list--item-text">{{contribution.content}}</div>
					</a>
				</li>
				
            	{% endfor %}
			</ul>
			<div class="to-list">
  			<button>
  				<a href="{{ path('contrib_index') }}">投稿一覧へ</a>
			</button>
			</div>
		</div>

	</body>
</html>
  {% endblock %}
  {% block javascript %}
  <script src="{{ asset('bundles/app/slick/slick.min.js') }}"></script>
<script>
$(function(){
  $('.slide').slick({
    autoplay:true,
    autoplaySpeed:5000,
    arrows:false,
    dots:false,
    pauseOnHover:true,
	responsive: [
		{
			breakpoint: 4000,
			settings: {
				slidesToShow: 3,
        		slidesToScroll: 3
			}
		},
		{
			breakpoint: 600,
			settings: {
				slidesToShow: 2,
        		slidesToScroll: 2
			}
		},
		{
			breakpoint: 375,
			settings: {
				slidesToShow: 1,
        		slidesToScroll: 1
			}
		}
	]
  });
});
</script>
  {% endblock %}